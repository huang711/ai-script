<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.drama.mapper.EpisodesMapper">
    
    <resultMap type="Episodes" id="EpisodesResult">
        <result property="id"    column="id"    />
        <result property="scriptId"    column="script_id"    />
        <result property="episodeNum"    column="episode_num"    />
        <result property="title"    column="title"    />
        <result property="summary"    column="summary"    />
    </resultMap>

    <sql id="selectEpisodesVo">
        select id, script_id, episode_num, title, summary from episodes
    </sql>

    <select id="selectEpisodesList" parameterType="Episodes" resultMap="EpisodesResult">
        <include refid="selectEpisodesVo"/>
        <where>  
            <if test="scriptId != null "> and script_id = #{scriptId}</if>
            <if test="episodeNum != null "> and episode_num = #{episodeNum}</if>
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
        </where>
    </select>
    
    <select id="selectEpisodesById" parameterType="Long" resultMap="EpisodesResult">
        <include refid="selectEpisodesVo"/>
        where id = #{id}
    </select>

    <insert id="insertEpisodes" parameterType="Episodes" useGeneratedKeys="true" keyProperty="id">
        insert into episodes
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="scriptId != null">script_id,</if>
            <if test="episodeNum != null">episode_num,</if>
            <if test="title != null">title,</if>
            <if test="summary != null">summary,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="scriptId != null">#{scriptId},</if>
            <if test="episodeNum != null">#{episodeNum},</if>
            <if test="title != null">#{title},</if>
            <if test="summary != null">#{summary},</if>
         </trim>
    </insert>

    <update id="updateEpisodes" parameterType="Episodes">
        update episodes
        <trim prefix="SET" suffixOverrides=",">
            <if test="scriptId != null">script_id = #{scriptId},</if>
            <if test="episodeNum != null">episode_num = #{episodeNum},</if>
            <if test="title != null">title = #{title},</if>
            <if test="summary != null">summary = #{summary},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteEpisodesById" parameterType="Long">
        delete from episodes where id = #{id}
    </delete>

    <delete id="deleteEpisodesByIds" parameterType="String">
        delete from episodes where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>